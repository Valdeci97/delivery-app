              }
            }
          }
        }
      }
    },
    "/sales": {
      "post": {
        "summary": "Criação de venda",
        "description": "Essa rota gera uma venda feita por uma pessoa cliente",
        "tags": ["Sales"],
        "security": [{ "bearerAuth": [] }],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": { "$ref": "#/components/schemas/Sale" },
              "examples": {
                "createdSale": {
                  "value": {
                    "totalPrice": 11.00,
                    "deliveryAddress": "Rua dos alfeneiros",
                    "deliveryNumber": "4",
                    "sellerId": 2,
                    "products": [{
                      "quantity": 5,
                      "id": 1
                    }]
                  }
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Venda criada com sucesso",
