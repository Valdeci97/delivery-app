  "components": {
    "schemas": {
      "Login": {
        "type": "object",
        "properties": {
          "email": { "type": "string" },
          "password": { "type": "string" }
        }
      },
      "User": {
        "type": "object",
        "properties": {
          "name": { "type": "string" },
          "email": { "type": "string" },
          "password": { "type": "string" }
        }
      },
      "LoginResponse": {
        "type": "object",
        "properties": {
          "user": {
            "type": "object",
            "properties": {
              "name": { "type": "string" },
              "email": { "type": "string" },
              "role": { "type": "string" }
            }
          },
          "token": { "type": "string" }
        }
      },
      "DefaultResponse": {
        "type": "object",
        "properties": {
          "message": { "type": "string" }
        }
      },
      "Product": {
        "type": "array",
        "items": {
          "properties": {
            "name": { "type": "string" },
            "price": { "type": "string" },
            "urlImage": { "type": "string" }
          }
        }
      },
      "Sale": {
        "type": "object",
        "properties": {
          "totalPrice": { "type": "number" },
          "deliveryAddress": { "type": "string" },
          "deliveryNumber": { "type": "string" },
          "sellerId": { "type": "number" },
          "products": {
            "type": "array",
            "items": {
              "properties": {
                "quantity": { "type": "number" },
                "id": { "type": "number" }
              }
            }
          }
        }
      },
      "SaleResponse": {
        "type": "object",
        "properties": {
          "id": { "type": "number" },
          "products": {
            "type": "array",
            "items": {
              "properties": {
                "quantity": { "type": "number" },
                "id": { "type": "number" }
              }
            }
          }
        }
      },
      "Order": {
        "type": "object",
        "properties": {
          "id": { "type": "number" },
          "totalPrice": { "type": "string" },
          "deliveryAddress": { "type": "string" },
          "deliveryNumber": { "type": "string" },
          "saleDate": { "type": "string", "format": "date-time" },
          "status": { "type": "string" },
          "userId": { "type": "number" },
          "sellerId": { "type": "number" },
          "products": {
            "type": "array",
            "items": {
              "properties": {
                "id": { "type": "number" },
                "name": { "type": "string" },
                "price": { "type": "string" },
                "urlImage": { "type": "string" },
                "SaleProduct": {
